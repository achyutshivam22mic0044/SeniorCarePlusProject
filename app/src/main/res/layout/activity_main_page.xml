<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background"
    tools:context=".MainPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Dashboard Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/dashboardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome To SeniorCare+"
                android:textSize="24sp"
                android:textColor="@color/primary"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/expandDashboardButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Expand Dashboard"
                android:src="@drawable/ic_expand" />
        </RelativeLayout>
        <TextView
            android:id="@+id/dashboardInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/primary"
            android:layout_marginBottom="16dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUserInfo"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter User Information"
            app:icon="@drawable/ic_user_info"
            app:iconGravity="start"
            app:strokeColor="@color/primary"
            app:strokeWidth="1dp"
            android:textColor="@color/primary"
            app:cornerRadius="8dp"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reminder"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medication Reminder"
            app:icon="@drawable/ic_reminder"
            app:iconGravity="start"
            app:strokeColor="@color/primary"
            app:strokeWidth="1dp"
            android:textColor="@color/primary"
            app:cornerRadius="8dp"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/schedule"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule Appointment"
            app:icon="@drawable/ic_schedule"
            app:iconGravity="start"
            app:strokeColor="@color/primary"
            app:strokeWidth="1dp"
            android:textColor="@color/primary"
            app:cornerRadius="8dp"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/setNumbersButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set SOS Numbers"
            app:icon="@drawable/ic_sos_settings"
            app:iconGravity="start"
            app:strokeColor="@color/primary"
            app:strokeWidth="1dp"
            android:textColor="@color/primary"
            app:cornerRadius="8dp"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sosButton"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send SOS"
            app:icon="@drawable/ic_sos"
            app:iconGravity="start"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/sos_red"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/emergencyCallButton"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency Call"
            app:icon="@drawable/ic_call"
            app:iconGravity="start"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/emergency_blue"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
